@page
@model CrudNet_MVVM.Pages.Dogs.DeleteModel
@{
    ViewData["Title"] = "Delete dog";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h1>Delete dog</h1>
        </div>
        <form method="post">
            <div class="mb-3">
                <input asp-for="Dog.Id" type="hidden" />
                <label asp-for="Dog.Name" class="form-label">Name</label>
                <input asp-for="Dog.Name" class="form-control" disabled/>
            </div>
            <div class="mb-3">
                <label asp-for="Dog.Age" class="form-label">Age</label>
                <input asp-for="Dog.Age" class="form-control" disabled />
            </div>
            <div class="mb-3">
                <label asp-for="Dog.Owner" class="form-label">Owner</label>
                <input asp-for="Dog.Owner" class="form-control" type="text" disabled />
            </div>
            <div class="mb-3">
                <label asp-for="Dog.Sex" class="form-label">Sex</label>
                <select asp-for="Dog.Sex" class="form-select" disabled>
                    <option value="" selected>Select an option</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary px-5">Delete</button>
            <a asp-area="" asp-page="Index" class="btn btn-outline-secondary px-5">Back to list</a>
        </form>
    </div>
</div>


